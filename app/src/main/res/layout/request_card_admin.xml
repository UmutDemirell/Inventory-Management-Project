<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="5dp"
    android:visibility="gone"
    app:cardElevation="8dp"
    android:id="@+id/card_admin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="155dp">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_id"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/card_explanation"
            app:layout_constraintTop_toTopOf="@+id/card_date_text" />

        <TextView
            android:id="@+id/card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/card_id_text"
            app:layout_constraintTop_toBottomOf="@+id/card_id_text" />

        <TextView
            android:id="@+id/card_explanation"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/card_title"
            app:layout_constraintTop_toBottomOf="@+id/card_title" />

        <TextView
            android:id="@+id/card_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_date"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/card_owner"
            app:layout_constraintStart_toStartOf="@+id/card_owner" />

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/card_date_text"
            app:layout_constraintTop_toTopOf="@+id/card_date_text" />

        <TextView
            android:id="@+id/card_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_owner"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/card_ownerName"
            app:layout_constraintTop_toTopOf="@+id/card_ownerName" />

        <TextView
            android:id="@+id/card_ownerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="6dp"
            android:text="@string/name_surname"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>